{% extends 'base.html.twig' %}

{% block body %}
    <h2> DETAILS</h2>
    <div>  {{ serie.id }}</div>
    <div>  {{ serie.name }}</div>
    <div>  {{ serie.popularity }}</div>
    <div>  {{ serie.firstAirDate|date('Y-m-d') }}</div>

    <section>
        <h3> Seasons </h3>


        {%  for season in serie.seasons %}

            <article>

                <img src="{{ asset('img/posters/seasons/'~season.poster) }}" alt="{{ serie.name }}">

                <div>

                    <h4> Season# {{ season.number }}</h4>
                    <div> {{ season.firstAirDate|date('y-m-d') }}</div>
                    <a href="{{ path('serie_edit',{'id':serie.id} ) }}"> update</a>
                    <a href="{{ path('serie_delete',{'id':serie.id} ) }}"> delete</a>

                    {% if season.overview  %}

                        <div> {{ season.overview }}</div>

                    {% endif %}
                </div>



            </article>

        {% endfor %}

    </section>

{% endblock %}



{% block extrastyle %}<style>
    body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.9)),
        url("{{ asset('img/backdrops/'~serie.backdrop) }}");
    }
    </style>
{% endblock %}


